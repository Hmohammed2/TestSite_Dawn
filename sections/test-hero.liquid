{{ 'test-hero.css' | asset_url | stylesheet_tag }}

<section class="test-hero">
  <div class="test-hero__container">

    <div class="test-hero__grid">

      <!-- LEFT CONTENT -->
      <div class="test-hero__content">

        {% if section.settings.badge != blank %}
          <div class="test-hero__badge">
            {{ section.settings.badge }}
          </div>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h1 class="test-hero__heading">
            {{ section.settings.heading }}
          </h1>
        {% endif %}

        {% if section.settings.description != blank %}
          <p class="test-hero__description">
            {{ section.settings.description }}
          </p>
        {% endif %}


        <!-- BUTTONS -->
        {% if section.settings.primary_button_link != blank or section.settings.secondary_button_link != blank %}
          <div class="test-hero__buttons">

            {% if section.settings.primary_button_link != blank %}
              <a
                href="{{ section.settings.primary_button_link }}"
                class="test-hero__button test-hero__button--primary"
              >
                {{ section.settings.primary_button_text }}
              </a>
            {% endif %}

            {% if section.settings.secondary_button_link != blank %}
              <a
                href="{{ section.settings.secondary_button_link }}"
                class="test-hero__button test-hero__button--secondary"
              >
                {{ section.settings.secondary_button_text }}
              </a>
            {% endif %}

          </div>
        {% endif %}


        <!-- STATS -->
        {% if section.blocks.size > 0 %}
          <div class="test-hero__stats">

            {% for block in section.blocks %}
              <div
                class="test-hero__stat"
                {{ block.shopify_attributes }}
              >

                <div class="test-hero__stat-value">
                  {{ block.settings.value }}
                </div>

                <div class="test-hero__stat-label">
                  {{ block.settings.label }}
                </div>

              </div>
            {% endfor %}

          </div>
        {% endif %}

      </div>


      <!-- RIGHT IMAGE -->
      <div class="test-hero__image-wrapper">

        {% if section.settings.image != blank %}

          {{
            section.settings.image
            | image_url: width: section.settings.image_width
            | image_tag:
              alt: section.settings.heading,
              loading: 'lazy',
              widths: '400, 600, 800, 1000, 1200, 1600',
              sizes: '(min-width: 768px) 50vw, 100vw',
              class: 'test-hero__image'
          }}

        {% endif %}


        <!-- APPROVAL CARD -->
        {% if section.settings.approval_title != blank %}
          <div class="test-hero__approval-card">

            <div class="test-hero__approval-icon">
              ✓
            </div>

            <div>

              <div class="test-hero__approval-title">
                {{ section.settings.approval_title }}
              </div>

              <div class="test-hero__approval-subtitle">
                {{ section.settings.approval_subtitle }}
              </div>

            </div>

          </div>
        {% endif %}

      </div>

    </div>

  </div>
</section>


{% schema %}
{
  "name": "Test Hero",
  "settings": [
    {
    "type": "range",
    "id": "image_height",
    "label": "Image height",
    "min": 200,
    "max": 1200,
    "step": 50,
    "default": 600,
    "unit": "px"
    },
    {
    "type": "range",
    "id": "image_width",
    "label": "Image width",
    "min": 200,
    "max": 1200,
    "step": 50,
    "default": 600,
    "unit": "px"
    },
    {
    "type": "range",
    "id": "image_max_width",
    "label": "Image max width",
    "min": 200,
    "max": 1600,
    "step": 50,
    "default": 800,
    "unit": "px"
    },


    {
      "type": "text",
      "id": "badge",
      "label": "Badge text",
      "default": "✨ New: UV Protection Lenses"
    },

    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Crystal Clear Vision Starts Here"
    },

    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Premium contact lenses delivered to your door."
    },

    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary button text",
      "default": "Shop Now"
    },

    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary button link"
    },

    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary button text",
      "default": "Take Vision Quiz"
    },

    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    },

    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    },

    {
      "type": "text",
      "id": "approval_title",
      "label": "Approval title",
      "default": "FDA Approved"
    },

    {
      "type": "text",
      "id": "approval_subtitle",
      "label": "Approval subtitle",
      "default": "All Products"
    }

  ],

  "blocks": [

    {
      "type": "stat",
      "name": "Stat",
      "settings": [
        {
          "type": "text",
          "id": "value",
          "label": "Value",
          "default": "50K+"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Happy Customers"
        }
      ]
    }

  ],

  "presets": [
    {
      "name": "Test Hero",
      "blocks": [
        {
          "type": "stat"
        },
        {
          "type": "stat"
        },
        {
          "type": "stat"
        }
      ]
    }
  ]
}
{% endschema %}
