<section class="py-16 md:py-24 bg-white">
  <div class="max-w-6xl mx-auto px-6">

    {% if section.settings.heading != blank %}
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-semibold tracking-tight">
          {{ section.settings.heading }}
        </h2>

        {% if section.settings.subheading != blank %}
          <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    <div class="grid gap-8 md:grid-cols-3">
      {% for block in section.blocks %}
        <div class="p-8 rounded-2xl border border-gray-200 hover:shadow-lg transition-shadow duration-300">

          {% if block.settings.icon != blank %}
            <div class="text-3xl mb-4">
              {{ block.settings.icon }}
            </div>
          {% endif %}

          <h3 class="text-xl font-semibold mb-3">
            {{ block.settings.title }}
          </h3>

          <p class="text-gray-600 leading-relaxed">
            {{ block.settings.text }}
          </p>

        </div>
      {% endfor %}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "SL Benefits",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Why Choose Us"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Section Subheading",
      "default": "Clear reasons that make your offer different and better."
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (emoji or symbol)",
          "default": "âš¡"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Powerful Results"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Short explanation of the benefit and the outcome it creates."
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "SL Benefits",
      "blocks": [
        { "type": "benefit" },
        { "type": "benefit" },
        { "type": "benefit" }
      ]
    }
  ]
}
{% endschema %}