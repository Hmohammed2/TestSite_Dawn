<section class="py-16 md:py-24 bg-blue-950 text-white">
  <div class="max-w-4xl mx-auto px-6 text-center">

    {% if section.settings.heading != blank %}
      <h2 class="text-3xl md:text-4xl font-semibold tracking-tight">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.settings.text != blank %}
      <p class="mt-4 text-lg text-blue-200 max-w-2xl mx-auto">
        {{ section.settings.text }}
      </p>
    {% endif %}

    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <div class="mt-8">
        <a href="{{ section.settings.button_link }}"
           class="inline-block bg-orange-600 hover:bg-orange-700 text-white px-10 py-4 text-lg font-medium rounded-xl transition-all duration-200 shadow-lg">
          {{ section.settings.button_label }}
        </a>
      </div>
    {% endif %}

  </div>
</section>

{% schema %}
{
  "name": "SL CTA",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to Take the Next Step?"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Supporting Text",
      "default": "Reinforce the value and remove hesitation before they click."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Get Started"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "SL CTA"
    }
  ]
}
{% endschema %}